// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator flow {
  provider = "node ../../dist/index.js"
  output   = "../lib/flow"
  
  // Custom selects for optimized queries
  postSelect = ["id", "title", "slug", "excerpt", "content", "published", "publishedAt", "createdAt", "updatedAt", "authorId", "author", "tags"]
  authorSelect = ["id", "email", "name", "bio", "posts"]
  tagSelect = ["id", "name", "slug", "posts"]
  
  // Limit relations to prevent over-fetching
  authorPostsLimit = 10
  tagPostsLimit = 20
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Author {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  posts     Post[]
}

model Post {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String?
  content     String
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  authorId    String
  author      Author    @relation(fields: [authorId], references: [id])
  
  tags        Tag[]
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  posts     Post[]
}
