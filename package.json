{
  "name": "next-prisma-flow-state-engine",
  "version": "1.0.0",
  "description": "deep acyclic selects, Zod schemas, server queries/actions, client hooks for Next.js + Prisma",
  "license": "MIT",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:bundle": "bun build ./src/index.ts --outfile=dist/generator.min.js --target=node --minify --external=@prisma/generator-helper --external=@prisma/internals",
    "build:all": "npm run build && npm run build:bundle",
    "prepublishOnly": "npm run build:all"
  },
  "dependencies": {
    "@prisma/generator-helper": "^5.15.0",
    "@prisma/internals": "^5.15.0",
    "@types/node": "^24.2.1",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0"
  }
}